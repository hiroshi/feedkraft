<%= flash[:error] %>
<% form_tag "", :method => "get" do %>
  <%= label_tag "src", "Source URI" %>: <%= text_field_tag "src", params[:src], :size => 80 %>
  <br/>
  <%= label_tag "rdf_about", "rdf:about" %> contains <%= text_field_tag "rdf_about", params[:rdf_about] %>
  <br/>
  <button>filter</button>
<% end %> 

<% if @src_feed %>
<div class="span-9">
  Source: <%= @src_feed.entries.size %> entries.
  <%= render :partial => "entries", :locals => {:feed => @src_feed} %>
</div>
<% end %>

<% if @result_feed %>
<div class="span-9 last">
  Results: <%= @result_feed.entries.size %> entries. --&gt; <%= link_to "feed", feed_path(filter_params) %>
  <%= render :partial => "entries", :locals => {:feed => @result_feed} %>
</div>
<% end %>
